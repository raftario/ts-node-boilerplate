{
    "name": "ts-node-boilerplate",
    "version": "0.1.0",
    "description": "Personal TypeScript + Node project boilerplate",
    "author": "Raphaël Thériault <raphael_theriault@outlook.com>",
    "main": "src/index.ts",
    "license": "MIT",
    "homepage": "https://github.com/raftario/ts-node-boilerplate",
    "repository": "raftario/ts-node-boilerplate",
    "engines": {
        "node": ">=8"
    },
    "scripts": {
        "dev": "ts-node-dev src/index.ts",
        "start": "ts-node --transpile-only src/index.ts",
        "lint:fix": "eslint --fix **/*.{ts,js} && prettier --write **/*.{json,md,yml}",
        "lint:check": "eslint **/*.{ts,js} && prettier --check **/*.{json,md,yml}"
    },
    "dependencies": {
        "@types/node": "^12.12.37",
        "ts-node": "^8.9.1",
        "typescript": "^3.8.3"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-prettier": "^3.1.3",
        "prettier": "^2.0.5",
        "ts-node-dev": "^1.0.0-pre.43"
    }
}
