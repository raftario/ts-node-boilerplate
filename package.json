{
    "name": "ts-node-boilerplate",
    "version": "0.1.0",
    "description": "Personal TypeScript + Node project boilerplate",
    "author": "Raphaël Thériault <raphael_theriault@outlook.com>",
    "private": true,
    "main": "src/index.ts",
    "license": "MIT",
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "start:dev": "ts-node-dev src/index.ts",
        "start:prod": "ts-node --transpile-only src/index.ts",
        "lint:fix": "eslint --fix **/*.{ts,js} && prettier --write **/*.{json,md,yml}",
        "lint:check": "eslint **/*.{ts,js} && prettier --check **/*.{json,md,yml}"
    },
    "devDependencies": {
        "@types/node": "*",
        "@typescript-eslint/eslint-plugin": "^4.12.0",
        "@typescript-eslint/parser": "^4.14.0",
        "eslint": "^7.17.0",
        "eslint-config-prettier": "^7.1.0",
        "eslint-plugin-prettier": "^3.3.1",
        "eslint-plugin-unicorn": "^25.0.1",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.1",
        "ts-node-dev": "^1.1.1",
        "typescript": "^4.1.3"
    }
}
