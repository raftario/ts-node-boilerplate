{
    "name": "ts-node-boilerplate",
    "version": "0.1.0",
    "description": "Personal TypeScript + Node project boilerplate",
    "author": "Raphaël Thériault <raphael_theriault@outlook.com>",
    "private": true,
    "main": "src/index.ts",
    "license": "MIT",
    "engines": {
        "node": ">=12"
    },
    "scripts": {
        "dev": "ts-node-dev src/index.ts",
        "start": "ts-node --transpile-only src/index.ts",
        "lint:fix": "eslint --fix **/*.{ts,js} && prettier --write **/*.{json,md,yml}",
        "lint:check": "eslint **/*.{ts,js} && prettier --check **/*.{json,md,yml}"
    },
    "dependencies": {
        "@types/node": "*",
        "ts-node": "^9.0.0",
        "typescript": "^4.1.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.13.0",
        "eslint-config-prettier": "^6.15.0",
        "eslint-plugin-prettier": "^3.1.4",
        "eslint-plugin-unicorn": "^23.0.0",
        "prettier": "^2.2.0",
        "ts-node-dev": "^1.0.0"
    }
}
