{
    "name": "ts-node-boilerplate",
    "version": "1.0.0",
    "description": "Personal TypeScript + Node project boilerplate",
    "author": "Raphaël Thériault <raphael_theriault@outlook.com>",
    "main": "src/index.ts",
    "license": "MIT",
    "homepage": "https://github.com/raftario/ts-node-boilerplate",
    "repository": "raftario/ts-node-boilerplate",
    "scripts": {
        "start": "ts-node src/index.ts",
        "start:dev": "ts-node-dev src/index.ts",
        "start:prod": "ts-node --transpile-only src/index.ts",
        "build": "tsc",
        "lint": "eslint --fix **/*.{ts,js} && prettier --write **/*.{json,md,yml}",
        "lint:check": "eslint **/*.{ts,js} && prettier --check **/*.{json,md,yml}"
    },
    "dependencies": {
        "@types/node": "^12.12.24",
        "ts-node": "^8.6.0",
        "typescript": "^3.7.4"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.15.0",
        "@typescript-eslint/parser": "^2.15.0",
        "eslint": "^6.8.0",
        "eslint-config-prettier": "^6.9.0",
        "eslint-plugin-prettier": "^3.1.2",
        "husky": "^4.0.5",
        "lint-staged": "^9.5.0",
        "prettier": "^1.18.2",
        "ts-node-dev": "^1.0.0-pre.43"
    },
    "husky": {
        "hooks": {
            "pre-commit": "lint-staged"
        }
    },
    "lint-staged": {
        "*.{ts,js}": [
            "eslint --fix",
            "git add"
        ],
        "*.{json,md,yml}": [
            "prettier --write",
            "git add"
        ]
    }
}
